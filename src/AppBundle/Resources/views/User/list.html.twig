{% extends "AppBundle::layout.html.twig" %}

{% block breadcrumb %}
    <ul class="breadcrumb well">
        <li>Список пользователей</li>
        <li><a href="{{ path('user_add') }}"><span class="btn btn-primary">Добавить</span></a></li>
    </ul>
{% endblock %}

{% block content %}
    <div class="well">
        <table class="table" data-toggle="table"
               data-sort-name="login"
               data-sort-order="asc">
            <thead>
                <tr>
                    <th data-field="login"
                        data-sortable="true">Логин</th>
                    <th data-field="right"
                        data-sortable="true">Права</th>
                    <th data-field="inn"
                        data-sortable="true">ИНН</th>
                    <th data-field="kpp"
                        data-sortable="true">КПП</th>
                    <th data-field="setting"
                        data-sortable="false" class="setting">Инструменты</th>
                </tr>
            </thead>
            {% for item in pagination %}
                <tr>
                    {#<td>{{ item.id }}</td>#}
                    <td>{{ item }}</td>
                    <td>{{ item.roles[0] }}</td>
                    <td>{{ item.inn }}</td>
                    <td>{{ item.kpp }}</td>
                    <td class="setting">
                        {% spaceless %}
                        <a href="{{ path('user_edit',{'id' : item.id}) }}">
                            <button type="button" class="btn btn-default btn-bg">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </a>
                            &nbsp;
                            &nbsp;
                        <a href="{{ path('user_remove',{'id' : item.id}) }}">
                            <button type="button" class="btn btn-default btn-bg">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </a>
                        {% endspaceless %}
                    </td>
                </tr>
            {% endfor%}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}