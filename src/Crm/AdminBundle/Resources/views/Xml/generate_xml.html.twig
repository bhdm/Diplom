{% spaceless %}
<ns2:TacPackage xmlns:ns2="http://www.example.org/">
    <PackageInfo>
        <PackageNumber>FLGMN-{{ driver.user.xmlId }}</PackageNumber>
        <PackageDate> {{ "now" | date('Y-m-d')}}Z</PackageDate>
        <OvkId>FLGMN</OvkId>
        <CardManufacturerId>ATLAS</CardManufacturerId>
    </PackageInfo>
    <Order>
        <OrderNumber>FLGMN-{{ driver.user.xmlId }}</OrderNumber>
        <OrderDate>{{ driver.created | date('Y-m-d')}}Z</OrderDate>
        <OrderCardType>D</OrderCardType>
        <OrderCardCount>1</OrderCardCount>
        <PersonOrder>
            <PersonInfo>
                <NameFirst>{{ driver.user.firstName }}</NameFirst>
                <NameLast>{{ driver.user.lastName }}</NameLast>
                <BirthDate>{{ driver.user.birthDate | date('Y-m-d') }}Z</BirthDate>
                <SNILS>{{ driver.user.snils }}</SNILS>
                <Passport>
                    <PassportSeries>{{ driver.passportSerial }}</PassportSeries>
                    <PassportNumber>{{ driver.passportNumber }}</PassportNumber>
                    <PassportIssuedBy>{{ driver.passportIssuance }}</PassportIssuedBy>
                    <PassportDivision>{{ driver.passportCode }}</PassportDivision>
                    <PassportIssuedDate>{{ driver.passportIssuanceDate | date('Y-m-d') }}Z</PassportIssuedDate>
                </Passport>
            </PersonInfo>
            <ContactInfo/>
            <DriverLicense>
                <DriverLicenseNumber>{{ driver.driverDocNumber }}</DriverLicenseNumber>
                <DriverLicenseCountryEstrCode>43</DriverLicenseCountryEstrCode>
                <DriverLicenseCountry>{{ driver.driverDocCountry.title }}</DriverLicenseCountry>
                <DriverLicenseOrg>{{ driver.driverDocIssuance }}</DriverLicenseOrg>
                <DriverLicenseIssuedDate>{{ driver.driverDocDateStarts | date('Y-m-d') }}Z</DriverLicenseIssuedDate>
                <DriverLicenseExpirationDate>{{ driver.driverDocDateEnds | date('Y-m-d') }}Z</DriverLicenseExpirationDate>
            </DriverLicense>
            <OrgName>{{ driver.companyName }}</OrgName>
            <OrgPostAddress>
                <FullAddress>{{ driver.zipcode }},Россия, {{ driver.region.title }}, {{ driver.cityType }} {{ driver.city }},{{ driver.streetType }}{{ driver.street }},д.{{ driver.home }} {{ driver.corpType }}{{ driver.corp }}, {{ driver.roomType }}{{ driver.room }}</FullAddress>
                <PostCode>{{ driver.zipcode }}</PostCode>
                <RegionCode>{{ driver.region.id }}</RegionCode>
                <Settlement>{{ driver.cityType}} {{ driver.city }}</Settlement>
                <Street>{{ driver.streetType }} {{ driver.street }}</Street>
                <House>{{ driver.home }}</House>
                <Building>{{ driver.corpType }} {{ driver.corp }}</Building>
                <Office>{{ driver.roomType }} {{ driver.room }}</Office>
            </OrgPostAddress>
            <Photo>
                <AttachmentName>{{ files[2].file.fileName }}</AttachmentName>
                <AttachmentType>Photo</AttachmentType>
                <FileFormat>{% if files[2].file.mimeType == 'image/jpeg' %}JPG{% elseif files[2].file.mimeType == 'image/png' %}PNG{% elseif files[2].file.mimeType == 'image/gif' %}GIF{% else %}FILE{% endif %}</FileFormat>
                <Body>{{ files[2].base }}</Body>
            </Photo>
            <Sign>
                <AttachmentName>{{ files[3].file.fileName }}</AttachmentName>
                <AttachmentType>Signature</AttachmentType>
                <FileFormat>{% if files[3].file.mimeType == 'image/jpeg' %}JPG{% elseif files[3].file.mimeType == 'image/png' %}PNG{% elseif files[3].file.mimeType == 'image/gif' %}GIF{% else %}FILE{% endif %}</FileFormat>
                <Body>{{ files[3].base }}</Body>
            </Sign>
        </PersonOrder>
        <Attachment>
            <AttachmentName>{{ files[0].file.fileName }}</AttachmentName>
            <AttachmentType>Other</AttachmentType>
            <FileFormat>{% if files[0].file.mimeType == 'image/jpeg' %}JPG{% elseif files[0].file.mimeType == 'image/png' %}PNG{% elseif files[0].file.mimeType == 'image/gif' %}GIF{% else %}FILE{% endif %}</FileFormat>
            <Body>{{ files[0].base }}</Body>
        </Attachment>
        <Attachment>
            <AttachmentName>{{ files[1].file.fileName }}</AttachmentName>
            <AttachmentType>Other</AttachmentType>
            <FileFormat>{% if files[1].file.mimeType == 'image/jpeg' %}JPG{% elseif files[1].file.mimeType == 'image/png' %}PNG{% elseif files[1].file.mimeType == 'image/gif' %}GIF{% else %}FILE{% endif %}</FileFormat>
            <Body>{{ files[1].base }}</Body>
        </Attachment>
        <Attachment>
            <AttachmentName>{{ files[5].file.fileName }}</AttachmentName>
            <AttachmentType>Other</AttachmentType>
            <FileFormat>{% if files[5].file.mimeType == 'image/jpeg' %}JPG{% elseif files[5].file.mimeType == 'image/png' %}PNG{% elseif files[5].file.mimeType == 'image/gif' %}GIF{% else %}FILE{% endif %}</FileFormat>
            <Body>{{ files[5].base }}</Body>
        </Attachment>
        <Attachment>
            <AttachmentName>{{ files[6].file.fileName }}</AttachmentName>
            <AttachmentType>Other</AttachmentType>
            <FileFormat>{% if files[6].file.mimeType == 'image/jpeg' %}JPG{% elseif files[6].file.mimeType == 'image/png' %}PNG{% elseif files[6].file.mimeType == 'image/gif' %}GIF{% else %}FILE{% endif %}</FileFormat>
            <Body>{{ files[6].base }}</Body>
        </Attachment>
    </Order>
</ns2:TacPackage>
{% endspaceless %}