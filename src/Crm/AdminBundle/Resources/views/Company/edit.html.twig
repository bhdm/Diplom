{% extends 'CrmAdminBundle::layout.html.twig' %}

{% block content %}
    <div class="form">
        {% if companyUrl is defined and companyUrl is not null %}
            <div  class="link"><b>Ссылка для регистрации:</b> {{ path('order_register_mini',{'compnayUrl' : companyUrl }) }}</div>
        {% endif %}
        <form id="register_form" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bundles/crmmain/lib/chosen/chosen.jquery.js") }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $("select").chosen({
                disable_search_threshold: 10,
                no_results_text: "Поиск не нашел ничего",
                disable_search: true,
                width: 250
            });
        });

    </script>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/crmmain/lib/chosen/chosen.css') }}" rel="stylesheet" media="all">
    <style>
        .link{
            text-align: left;
            padding: 10px;
            color: #555;
            font-style: italic;
        }
        .label{
            width: 200px;
        }
        .form{
            margin: 0 auto;
            width: 900px;
            text-align: center;
        }
    </style>
{% endblock %}