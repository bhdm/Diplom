{#{{ dump(error) }}#}

    {% block alert %}
        {% if error.message is defined  %}
            <div class="alert alert-danger" role="alert">{{ error.message }}</div>
        {% endif %}
    {% endblock %}

{% block content %}
    <div class="col-md-12" style="text-align: center">
        <img src="{{ asset('bundles/app/images/img.jpg') }}" />
        <br />
        <br />
    </div>
    <div class="col-md-6">
        <ul class="list-group">
            {% for page in pages %}
                <li class="list-group-item"><a href="{{ path('pages',{ 'url' : page.url  }) }}">{{ page.title }}</a></li>
            {% endfor %}
        </ul>

        {#<div class="btn-group btn-group-justified" role="group" aria-label="...">#}
            {#{% for page in pages %}#}
                {#<div class="btn-group" role="group">#}
                    {#<button type="button" class="btn btn-default">Left</button>#}
                    {#{{ page.title }}</a>#}
                {#</div>#}
            {#{% endfor %}#}
        {#</div>#}

    </div>
    <div class="col-md-6">
        <div class="well">
            <form method="POST" action="{{ path('login_check') }}">
                {#<input type="text" class="form-control" placeholder="Email" required autofocus name="_username">#}
                <div class="input-group">
                    <span class="input-group-addon ">@</span>
                    <input type="text" class="form-control" placeholder="E-mail" required autofocus name="_username">
                </div>
                <br/>
                <div class="input-group">
                    <span class="input-group-addon" style="padding-left: 17px;">#</span>
                    <input type="password" class="form-control" placeholder="Пароль" required autofocus name="_password">
                </div>
                <br />
                <button type="submit" class="btn btn-default">
                     Войти
                </button>
            </form>
        </div>
    </div>
    <div class="col-md-12">
        <div class="container">
            <div class="cal1">
            </div>
            <div class="cal2">
                <script type="text/template" id="template-calendar">
                    <div class="clndr-controls">
                        <div class="clndr-previous-button">&lsaquo;</div>
                        <div class="month"><%= month %></div>
                        <div class="clndr-next-button">&rsaquo;</div>
                    </div>
                    <div class="clndr-grid">
                        <div class="days-of-the-week">
                            <% _.each(daysOfTheWeek, function(day) { %>
                            <div class="header-day"><%= day %></div>
                            <% }); %>
                            <div class="days">
                                <% _.each(days, function(day) { %>
                                <div class="<%= day.classes %>"><%= day.day %></div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    <div class="clndr-today-button">Today</div>
                </script>

            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
{% endblock %}

