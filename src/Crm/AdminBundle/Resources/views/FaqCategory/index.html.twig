{% extends 'CrmAdminBundle::layout.html.twig' %}

{% block content %}
    <div class="crumbs">
        <a href="#">Категории вопросов</a>
        >>
        <a href="{{ path('admin_faqcategory_new') }}">Добавить</a>
    </div>

    <table class="list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>
                        <a href="{{ path('admin_faqcategory_edit', { 'id': entity.id }) }}">Изменить</a>
                        <a href="{{ path('admin_faqcategory_delete', { 'id': entity.id }) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_faqcategory_new') }}">
                Создать новую категорию
            </a>
        </li>
    </ul>
    {% endblock %}
